# MongoDB Connection String
# Format: mongodb://username:password@host:port/database_name
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/database_name
MONGO_CONNECTION_STRING=mongodb://username:password@localhost:27017/your_database

# Daily backup interval in minutes
DAILY_BACKUP_INTERVAL_MINUTES=60

# Maximum number of daily backups to keep (set to -1 for unlimited)
MAX_DAILY_BACKUPS=24

# Number of weekly backups distributed throughout the week
NUMBER_OF_WEEKLY_BACKUPS=7

# Maximum age of weekly backups in weeks
MAX_AGE_OF_WEEKLY_BACKUPS=4

# Number of monthly backups (taken on 1st of each month)
NUMBER_OF_MONTHLY_BACKUPS=12

# Maximum age of monthly backups in months
MAX_AGE_OF_MONTHLY_BACKUPS=12

# Number of yearly backups (taken on January 1st)
NUMBER_OF_YEARLY_BACKUPS=5

# Maximum age of yearly backups in years
MAX_AGE_OF_YEARLY_BACKUPS=5

# Path where backups will be stored (inside container)
BACKUP_PATH=/backups

# Web UI port
WEB_UI_PORT=3000

# Timezone for backup scheduling
TIMEZONE=UTC
